<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <!-- Bluetooh Usage Descriptions -->
        <key>NSBluetoothAlwaysUsageDescription</key>
        <string>Used to communicate with nearby devices during emergencies.</string>
        <key>NSBluetoothPeripheralUsageDescription</key>
        <string>Used to broadcast SOS messages during emergencies.</string>

        <!-- Motion Usage Descriptions -->
        <key>NSMotionUsageDescription</key>
        <string>Used to detect incidents and trigger SOS response.</string>

        <!-- Background modes -->
        <key>UIBackgroundModes</key>
        <array>
            <!-- Used by the SOS beacon -->
            <string>bluetooth-peripheral</string>
            <!-- Used by the siren player -->
            <string>audio</string>
        </array>
    </dict>
</plist>
